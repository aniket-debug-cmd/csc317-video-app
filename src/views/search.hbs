<section class="main-card">
  <span class="badge">Search</span>
  <h2 style="margin-top:10px">Find videos</h2>

  <form method="GET" action="/search" style="margin-top:12px; display:flex; gap:8px;">
    <input type="text" name="q" value="{{q}}" placeholder="Search titles or descriptions…" style="flex:1; padding:10px 12px; border:1px solid var(--border); border-radius:10px; background:var(--panel)">
    <button class="btn" type="submit">Search</button>
  </form>
</section>

{{#if posts.length}}
  <section class="container" style="margin-top:18px; display:grid; grid-template-columns:repeat(auto-fill,minmax(220px,1fr)); gap:16px;">
    {{#each posts}}
      <a href="/post/{{this.id}}" style="display:block; border:1px solid var(--border); border-radius:12px; overflow:hidden; background:var(--panel); text-decoration:none;">
        <div style="aspect-ratio:16/9; background:#f5e7dc; display:flex; align-items:center; justify-content:center;">
          {{#if this.thumb_path}}
            <img src="{{this.thumb_path}}" alt="{{this.title}}" style="width:100%; height:100%; object-fit:cover;">
          {{else}}
            <span style="color:#8a6a5a; padding:12px;">No thumbnail</span>
          {{/if}}
        </div>
        <div style="padding:10px 12px; color:var(--ink);">
          <strong style="display:block">{{this.title}}</strong>
          <small class="lead">{{this.created_at}}</small>
        </div>
      </a>
    {{/each}}
  </section>
{{else}}
  {{#if q}}<p class="lead" style="margin-top:12px">No results for “{{q}}”.</p>{{/if}}
{{/if}}
